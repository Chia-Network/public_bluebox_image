{

    "builders": [
        {
            "type": "amazon-ebs",
            "region": "us-west-2",
            "instance_type": "t3.medium",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "root-device-type": "ebs",
                    "architecture": "x86_64",
                    "name": "ubuntu/images/hvm-ssd/ubuntu-focal-20.04*"
                },
                "owners": [
                    "099720109477"
                ],
                "most_recent": true
            },
            "ami_name": "Public_Bluebox_Base-{{timestamp}}",
            "ami_description": "Public Bluebox Image, built from {{.SourceAMI}} ({{.SourceAMIName}}) at {{isotime}}",
            "tags": {
                "Name": "Public Bluebox Base-{{timestamp}}"
            }
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "user": "ubuntu",
            "ansible_env_vars": [
                "ansible_python_interpreter=/usr/bin/python3"
            ],
            "playbook_file": "./ansible/playbook.yml"
        }
    ]
}
